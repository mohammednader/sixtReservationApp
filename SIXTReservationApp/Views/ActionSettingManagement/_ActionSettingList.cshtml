@using SIXTReservationBL.Models;
@model SIXTReservationApp.Models.ActionSetting.ActionSettingVM[]

@{
    ViewData["Title"] = "Action Setting List";

}


<div class="fade-in-up">
    <div class="ibox">
        <div class="ibox-head">
            <div class="ibox-title">Action Setting List</div>
        </div>
        <div class="ibox-body">
            <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th  data-sortable="false" class="text-left">Reservation Status</th>
                        <th  data-sortable="false" class="text-center">Rate Segment Category</th>
                        <th  data-sortable="false" class="text-center">Branch</th>
                        <th  class="text-center">WeekDay</th>
                        <th  data-sortable="false" class="text-center">Action Step</th>
                        <th  data-sortable="false" class="text-center">Status</th>
                        <th  data-sortable="false" class="text-center">Action</th>

                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model != null && Model.Length > 0)
                    {
                    @for (int i = 0; i < Model.Length; i++)
                        {
                            var item = Model[i];
                    <tr>
                        <td class="text-left">
                            @item.ReservationStatusText
                        </td>
                        <td>
                            @item.RateSegmentText
                        </td>
                        <td>
                            @item.BranchText
                        </td>
                        <td>
                            @item.WeekDayText
                        </td>
                        <td>
                            @item.ActionStepText
                        </td>
                        <td>
                            @if (item.IsEnable??false)
                            {
                                <i title="Enabled" class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i title="Disabled" class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td>
                            <button onclick="Edit(@item.Id)" class="material-tooltip-main btn-primary btn btn-floating btn-sm m-0 p-0" data-toggle="tooltip" title="Edit">
                                <i class="fa fa-pencil font-14"></i>
                            </button>

                            <button onclick="Delete(@item.Id)" class="material-tooltip-main btn btn-red btn-floating btn-sm m-0 ml-0 p-0" data-toggle="tooltip"
                                    data-original-title="Delete">
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>
                    </tr>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(() => {
        $('.material-tooltip-main').tooltip();
    })
</script>
