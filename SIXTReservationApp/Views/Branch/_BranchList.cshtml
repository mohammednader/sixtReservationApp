@model  SIXTReservationApp.ViewModels.BranchVM[]
@{
    ViewData["Title"] = "Branch List";

}


<div class=" fade-in-up">
    <div class="ibox">
        <div class="ibox-head">
            <div class="ibox-title">Branch List</div>
        </div>
        <div class="ibox-body">
            <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                <thead class="text-center">
                    <tr>
                        <th  data-sortable="false" class="text-left">Branch Name</th>
                        <th>Code</th>
                        <th data-sortable="false">Email</th>
                        <th data-sortable="false">Status</th>
                        <th data-sortable="false">Action</th>

                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model!=null && Model.Length>0 )
                    {
                        @for (int i = 0; i < Model.Length; i++)
                        {
                            var item = Model[i];
                            <tr>
                                <td class="text-left">
                                    @item.Name
                                </td>
                                <td>
                                    @item.Code
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @if (item.IsActive ?? false)
                                    {
                                        <i title="Active" class="fa fa-check text-success"></i>
                                    }
                                    else
                                    {
                                        <i title="Inactive" class="fa fa-times text-danger"></i>
                                    }
                                </td>
                                <td>
                                    <button onclick="Edit(@item.Id)" class="material-tooltip-main btn-primary btn btn-floating btn-sm  p-0 m-0" data-toggle="tooltip"
                                             title="Edit">
                                        <i class="fa fa-pencil font-14"></i>
                                    </button>
                                    @if (item.IsActive ?? false)
                                    {
                                        <button class="material-tooltip-main btn btn-danger btn-floating btn-sm my-0 p-0 m-0 ml-1" data-toggle="tooltip"
                                                 title="Deactivate" onclick="deactivateBranch(@item.Id)">
                                            <i class="fas fa-lock"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="material-tooltip-main btn btn-success btn-floating btn-sm my-0 p-0 m-0 ml-1" data-toggle="tooltip"
                                                 title="Activate" onclick="activateBranch(@item.Id)">
                                            <i class="fas fa-lock-open"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
 
