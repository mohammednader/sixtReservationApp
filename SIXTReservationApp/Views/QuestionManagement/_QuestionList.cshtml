@using SIXTReservationBL.Models; 
@model SIXTReservationApp.Models.Question.QuestionVM[]

@{
    ViewData["Title"] = "Question List";

}


<div class="fade-in-up">
    <div class="ibox">
        <div class="ibox-head">
            <div class="ibox-title">Question List</div>
        </div>
        <div class="ibox-body">
            <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th  data-sortable="false" class="text-left">Question Text</th>
                        <th data-sortable="false" class="text-center">Reservation Status</th>
                        <th data-sortable="false" class="text-center">Action Step</th>
                        <th data-sortable="false" class="text-center">Action</th>

                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model != null && Model.Length > 0)
                    {
                        @for (int i = 0; i < Model.Length; i++)
                        {
                            var item = Model[i];
                    <tr>
                        <td class="text-left">
                            @item.QuestionText
                        </td>
                        <td>
                            @item.ReservationStatusText
                        </td>
                        <td>
                           @item.ActionStepText
                        </td>
                        <td>
                            <button onclick="Edit(@item.Id)" class="material-tooltip-main btn-primary btn btn-floating btn-sm m-0 mr-1 p-0" data-toggle="tooltip" title="Edit">
                                <i class="fa fa-pencil font-14"></i>
                            </button>
                          
                            <button onclick="Delete(@item.Id)" class="material-tooltip-main btn btn-red btn-floating btn-sm m-0 p-0" data-toggle="tooltip"
                                    data-original-title="Delete">
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(() => {
        $('.material-tooltip-main').tooltip();
    })
</script>
