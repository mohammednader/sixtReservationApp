@model SIXTReservationApp.Models.UserManagement.ChangePasswordDto
@{
    ViewData["Title"] = "Change Password";
}

<div class="card card-body  my-2">
    <form asp-action="ChangePassword" method="post" id="formChangePassword">
        <input type="hidden" name="returnUrl">
        <div class="row">
            <div class="form-group col-12 col-sm-6">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-sm-6">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-12 col-sm-6">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-sm-6">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-right">
                <button type="submit" class="btn btn-primary px-3">Save</button>
            </div>
        </div>
    </form>
</div>

@if (!string.IsNullOrEmpty(ViewBag.returnUrl))
{
    <script>
        $('input[name=returnUrl]').val('@ViewBag.returnUrl');
    </script>
}

<script>
    $('#formChangePassword').ajaxForm(response => {
        if (response) {
            if (response.ok) {
                Swal.fire({
                    icon: 'success',
                    text: response.message,
                }).then(_ => {
                    if (response.redirect) {
                        location.href = response.redirect;
                    }
                });
            }
            else {
                Swal.fire({
                    icon: 'error',
                    text: response.message,
                });
            }
        }
    });
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        initUnlikeAttribute();
    </script>
}