@model List<SIXTReservationApp.Models.RoleManagement.RoleVM>
@{
    ViewData["Title"] = "Role List";
}

<div class="page-content fade-in-up">
    <div class="ibox">
        <div class="ibox-head">
            <div class="ibox-title">Role List</div>
        </div>
        <div class="ibox-body">
            <table class="table table-striped table-bordered table-hover" id="tblRoles" cellspacing="0" width="100%">
                <thead class="text-center">
                    <tr>
                        <th  data-sortable="false" class="text-left">Role Name</th>
                        <th  data-sortable="false">Description</th>
                        <th  data-sortable="false">Created By</th>
                        <th>Creation Date</th>
                        <th>Last Modified By</th>
                        <th>Last Modified Date</th>
                        <th  data-sortable="false">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model?.Count > 0)
                    {
                        for (int i = 0; i < Model.Count; i++)
                        {
                            var item = Model[i];
                            <tr>
                                <td  class="text-left"><b>@item.Name</b></td>
                                <td>@item.Description</td>
                                <td>@item.CreatedBy</td>
                                <td>@item.CreationDate</td>
                                <td>@item.LastModifiedBy</td>
                                <td>@item.LastModificationDate</td>
                                <td>

                                    <button class="material-tooltip-main btn-primary btn btn-floating btn-sm my-0 p-0 m-0" data-toggle="tooltip" title="Edit">
                                        <a href="@Url.Action("UpdateRole", new { Id = item.Id })" class="btn-link">
                                            <i class="fa fa-pencil font-14"></i>
                                        </a>
                                    </button>
                                    <button class="material-tooltip-main btn btn-red btn-floating btn-sm my-0 p-0 m-0 ml-1" data-placement="top" data-toggle="tooltip" title="Delete" onclick="deleteRole(@item.Id)">
                                        <i class="fa fa-trash "></i>
                                    </button>

                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">No roles found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

